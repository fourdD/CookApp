{
  "rules": {
    "no-unused-variable": [true, {"multiline": "always", "singleline": "never"}],
    "trailing-comma": [true, "always", "strict-bound-class-methods"],
    "no-conditional-assignment": true,
    "no-constant-condition": true,
    "no-control-regex": true,
    "no-debugger": true,
    "no-duplicate-case": true,
    "no-ex-assign": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-inner-declarations": true,
    "no-invalid-regexp": true,
    "ter-no-irregular-whitespace": [true],
    "no-regex-spaces": true,
    "ter-no-sparse-arrays": [true],
    "no-unexpected-multiline": true,
    "no-unsafe-finally": true,
    "use-isnan": true,
    "valid-typeof": true,
    "cyclomatic-complexity": true,
    "curly": true,
    "switch-default": true,
    "triple-equals": true,
    "forin": true,
    "ban": true,
    "no-arg": true,
    "no-eval": true,
    "no-switch-case-fall-through": true,
    "no-invalid-this": true,
    "label-position": true,
    "no-magic-numbers": true,
    "no-multi-spaces": true,
    "no-unused-expression": true,
    "no-construct": true,
    "no-duplicate-variable": true,
    "no-string-throw": true,
    "radix": true,
    "no-shadowed-variable": true,
    "no-use-before-declare": true,
    "array-bracket-spacing": [true, "never"],
    "block-spacing": [true, "always"],
    "brace-style": [true, "1tbs", { "allowSingleLine": true }],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
    "ter-computed-property-spacing": [true],
    "ter-func-call-spacing": [true],
    "max-file-line-count": [true, 300],
    "ter-newline-after-var": [true],
    "ter-no-mixed-spaces-and-tabs":[{ "type": "spaces" } ],
    "no-consecutive-blank-lines": [true, 2],
    "no-trailing-whitespace": [true, "ignore-comments", "ignore-blank-lines"],
    "ter-no-tabs": true,
    "no-var-keyword": true,
    "object-literal-shorthand": true,
    "quotemark": [true, "single", "avoidEscape", "avoid-template"],
    "semicolon": [true, "always"],
    "angular-whitespace": [
      true,
      "check-interpolation",
      "check-semicolon"
    ],
    "banana-in-box": true,
    "templates-no-negated-async": true,
    "directive-selector": [
      true,
      "attribute",
      "dir",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      ["cmp", "page"],
      "kebab-case"
    ],
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "use-view-encapsulation": true,
    "no-attribute-parameter-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-output-on-prefix": true,
    "no-forward-ref": true,
    "no-unused-css": true,
    "use-pipe-transform-interface": true,
    "pipe-naming": [
      true,
      "camelCase",
      "pipe"
    ],
    "component-class-suffix": [
      true,
      "Component",
      "Page"
    ],
    "directive-class-suffix": true
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules",
    "node_modules/codelyzer"
  ]
}
